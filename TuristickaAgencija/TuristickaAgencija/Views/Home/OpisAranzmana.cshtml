@using TuristickaAgencija.Models
@{
    ViewBag.Title = "OpisAranzmana";
    List<Aranzman> aranzmani = new List<Aranzman>();
    if (Context.Application["aranzmani"] != null)
    {
        aranzmani = (List<Aranzman>)Context.Application["aranzmani"];
    }
    Session["page"] = "protekli";
    Aranzman ja = (Aranzman)ViewBag.Aranzman;
}

<h2>Opis aranzmana - @ja.Naziv</h2>

@if (TempData["message"] != null)
{
    <p style="text-align:center; font-family:Cambria; font-size:20px; font-weight:bold; font-style:italic;">@TempData["message"]</p>
    TempData["message"] = null;
}

<p style="font-size:16px;">@ja.OpisAranzmana</p>